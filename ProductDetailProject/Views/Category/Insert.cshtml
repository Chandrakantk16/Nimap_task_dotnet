@model ProductDetailProject.Models.CategoryTable

@{
    ViewBag.Title = "Insert";
}

<style>
    .image {
        background-image: url('https://coolbackgrounds.io/images/backgrounds/white/white-triangle-369b8d2d.jpg');
    }
</style>

<body class="image">
    <h2>Insert New Category</h2>

    <div class="form-container">
        @using (Html.BeginForm("Insert", "Category", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryName, "Category Name:", new { @class = "control-label" })
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-default">Insert Category</button>
        }
    </div>

    <div class="text-center">
        <h4>
            <b>
                @Html.ActionLink("View Category Table", "Index", null, new { @class = "btn btn-default" })
            </b>
        </h4>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
